@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
   @using System.Collections.Generic

@{
    ViewData["Title"] = "Index";

    var firstName = ViewData["FirstName"] as string;
    var age = ViewData["Age"] != null ? (int)ViewData["Age"] : 0;
    var hobbies = ViewData["Hobbies"] as List<string>;
}

<h2>Informations</h2>

<p><strong>Nom :</strong> @firstName</p>
<p><strong>Âge :</strong> @age</p>

<p>
    <strong>Statut :</strong>
    @if (age >= 18)
    {
        <span>Majeur</span>
    }
    else
    {
        <span>Mineur</span>
    }
</p>

<hr />

<h3>Hobbies :</h3>

@if (hobbies != null && hobbies.Count > 0)
{
    <ul>
        @foreach (var hobby in hobbies)
        {
            <li class="hobby-item">@hobby</li>
        }
    </ul>
}
else
{
    <p>Aucun hobby renseigné</p>
}

<hr />

<h3>Nombres de 1 à 10 :</h3>

@for (int i = 1; i <= 10; i++)
{
    if (i % 2 == 0)
    {
        <span><strong>@i</strong> </span>
    }
    else
    {
        <span>@i </span>
    }
}

<style>
    body {
        background-color: #f2f2f2;
        color: #333;
        font-family: Arial;
    }

    .hobby-item {
        background-color: lightblue;
        color: darkblue;
        padding: 5px;
        margin: 5px 0;
        border-radius: 4px;
    }
</style>

</div>
